body.catppuccin-{{flavor}} {
  --text-default: #{{text}};
  --text-secondary: #{{subtext1}};
  --text-tertiary: #{{crust}};

  --background: #{{base}};
  --background-darker: #{{mantle}};
  --background-lighter: #{{surface0}};
  --body-background: #{{base}};
  --gradient-body-background: #{{base}};
  --input-background: #{{surface0}};
  --controller-hints-background: transparent;
  --current-background: #{{base}};
  --modal-background: #{{crust}};
  --modal-border: #{{blue}};
  --osk-background: #{{base}};
  --osk-button-background: #{{surface0}};
  --osk-button-border: #{{crust}};
  --search-bar-background: #{{surface0}};
  --search-bar-border: #{{surface0}};

  --action-icon: #{{text}};
  --action-icon-hover: #{{mauve}};
  --action-icon-active: #{{blue}};
  --icons-background: #{{base}};

  --primary-button: #{{blue}};
  --primary-button-overlay: #{{sapphire}};
  --secondary-button: #{{mauve}};
  --secondary-button-overlay: #{{pink}};
  --tertiary-button: #{{yellow}};
  --tertiary-button-overlay: #{{peach}};
  --success-button: #{{green}};
  --disabled-button: #{{mantle}};
  --disabled-button-overlay: #{{crust}};

  --navbar-active: #{{blue}};
  --navbar-inactive: #{{text}};
  --navbar-active-background: #{{surface0}};
  --navbar-accent: #{{mauve}};
  --navbar-background: #{{mantle}};
  --divider: #{{mantle}};

  --success: #{{green}};
  --success-hover: #{{teal}};
  --danger: #{{yellow}};
  --danger-hover: #{{peach}};

  --primary: #{{blue}};
  --secondary: #{{mauve}};
  --accent: #{{blue}};

  --status-success: #{{green}};
  --status-warning: #{{yellow}};
  --status-danger: #{{red}};
  --status-info: #{{blue}};

  --neutral-01: #{{crust}};
  --neutral-02: #{{base}};
  --neutral-03: #{{surface0}};
  --neutral-04: #{{overlay0}};
  --neutral-05: #{{subtext0}};
  --neutral-06: #{{text}};
}

body.catppuccin-{{flavor}} select,
body.catppuccin-{{flavor}} input {
  box-shadow: none !important;
}
